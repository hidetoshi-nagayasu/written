.row.container.center-block
  .form-section.col.s12.m6.offset-m3
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      %h3.form-title.center-align アカウント設定
      .field.input-field
        %label{"data-error" => "wrong", "data-success" => "right", :for => "email"} Email
        = f.email_field :email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field.input-field
        %label{"data-error" => "wrong", "data-success" => "right", :for => "password"}
          New Password
          %i (変更しない場合は空欄のままでOK!)
        = f.password_field :password, autocomplete: "off"
        - if @minimum_password_length
          %br/
          %em
            = @minimum_password_length
            characters minimum
      .field.input-field
        %label{"data-error" => "wrong", "data-success" => "right", :for => "password_again"} Password again
        = f.password_field :password_confirmation, autocomplete: "off"
      .field.input-field
        %label{"data-error" => "wrong", "data-success" => "right", :for => "current_password"}
          Current Password
          %i (変更を確認するために現在のパスワードを入力)
        = f.password_field :current_password, autocomplete: "off"
      .field
        = f.submit "アカウント情報を更新する", class: 'waves-effect waves-light btn-large'
    %p= link_to "退会はこちら", registration_path(resource_name), data: { confirm: "本当に退会してよろしいですか?復元はできませんのでご注意ください。" }, method: :delete
    .field
      = link_to "戻る", :back
